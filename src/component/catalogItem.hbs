<div class="card col-6">
    <img src="{{img}}" alt="" class="card-img-top">
    <div class="card-body">
        <div class="my-1">
            {{#if isHot}}
            <span class="badge rounded-pill bg-warning me-3">HOT</span>
            {{/if}}
            {{#if isNew}}
            <span class=" badge rounded-pill bg-primary">NEW</span>
            {{/if}}
            <span class="badge rounded-pill">|</span>
        </div>
        <div class="my-2">
            {{#if isFast}}
            <span class="btn btn-success">Fast delivery</span>
            {{else}}
            <span class="btn btn-success">Standart delivery</span>
            {{/if}}
        </div>
        <div class="my-1">
            {{#if isFree}}
            <span class="btn btn-secondary">Free delivery</span>
            {{else}}
            <span class="btn btn-secondary">Delivery additional</span>
            {{/if}}
        </div>
            {{!--badges and buttons--}}
        

        <h3>{{name}}</h3>
        {{#with review}}
        <p> {{amount}} {{text}} </p>
        {{/with}}
        <p class="h3"> {{price}} </p>
        <p> {{delivery}} </p>
        {{#each buttons}}
            {{#if isPrimary}}
            <a href="{{link}}" class="btn btn-primary"> {{text}} </a>
            {{/if}}
            <br>
            {{#if isSecondary}}
            <a href="{{link}}" class="btn btn-secondary"> {{text}} </a>
            {{/if}}                  
        {{/each}}
        <ul class="">
            {{#each characteristics}}
            <li class=""> {{title}}: {{value}} </li>
            {{/each}}
        </ul>
    </div>
</div>