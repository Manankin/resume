      {{#each reviewList}}
      <div class="card col-12 mb-2">
         <div class="card my-2">
            <div class="card-header">
            {{#with title}}
               <p class="h2">{{userName}}</p>
               <p class="h4"> {{caption}} </p>
               <p class="h4 mt-2"> {{date}} </p>
            {{/with}}
            </div>
            <div class="card-body">
            {{#with reviewBody}}
               <p class="h3 "> {{seller.title}}: {{seller.value}} </p>
               <p class="h3 my-3"> {{rating.title}}: {{rating.value}} </p>
               {{#each text}}
                  <p class="h5 mb-4"> {{this}} </p>
               {{/each}}
               {{#with advantages}}
                  <div class="h4 mb-4">
                     <p class="my-0"><b> {{title}} </b></p>
                     <p class="my-0"> {{text}} </p>
                  </div>
               {{/with}}
               {{#with disadvantages}}
                  <div class="h4">
                     <p class="my-0"><b> {{title}} </b></p>
                     <p class="my-0"> {{text}} </p>
                  </div>
               {{/with}}
               <div class="mt-3 mb-0 ">
               {{#each images}}
                  <img src="{{this}}" alt="" class="me-2 rounded-1">
               {{/each}}
               </div>            
            </div>            
         </div>
         <div class="row my-2 ">
            <div class="col-1"></div>
            <div class="col-11">
               {{#each coments}}
               <div class="card col-12 mb-2">
                  <div class="card-body mx-0">
                     <p class="h4"> {{userName}} </p>
                     <p class="h5"> {{date}} </p>
                     <p class="h5"> {{text}} </p>
                  </div>
               </div>
               {{/each}}
            </div>
         </div>
            {{/with}} {{!--close reviewList.reviewBody--}}
      </div>
      {{/each}} {{!--close reviewList--}}