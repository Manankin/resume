{{! Цей контейнер сторінки skills, де буде показано нашы навички та знання }}


{{#with main}} 
<main>
  <section class="card mb-3">
    <div class="card-header">
      {{> title data=title big=true }}
    </div>
    <div class="card-body">          
      <ul class="list-group">
          {{#each skills}}
          <li class="list-group-item">
            {{name}}
            {{#if points includeZero=true}} - {{points}} {{/if}}
            {{#if isTop}} - it's my Top technology{{/if}}
            
            {{#unless points}} 
                {{#if points includeZero=true}} - in learning process
                {{else}}  - don't learning {{/if}}
            {{/unless}}
          </li>
          {{/each}}
      </ul>
    </div>
  </section>

  <section class="card mb-3">
    <div class="card-header">
      {{> title data=hobby big=false }}
    </div>
    <div class="card-body">
      <ol class="list-group">
        {{#each hobbies}}
        <li class="list-group-item">
          {{name}}
          {{#if isMain}} (favourite) {{/if}}
        </li>
        {{/each}}
      </ol>      
    </div>
  </section>
</main>
{{/with}}


