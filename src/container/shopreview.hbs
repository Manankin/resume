<main>
   {{!-- header nav --}}
   <div class="card mb-3">
   {{#with navigation}}
      <div class="nav">
      {{#each links}}
         {{#if href}}
         <div class="nav-item">
            <a href="href" class="nav-link">{{text}}</a>
         </div>
         {{else}}
         <div class="nav-item">
            <a href="href" class="nav-link disabled">Disabled</a>
         </div>
         {{/if}}
      {{/each}}             
      </div>
   {{/with}}
   </div>
   <hr>
   {{!--part 1--}}
   <div class="row g-1">
      <div class="col-9">
      {{#with formBlock}}
         <h1 class="mx-0"> {{header}} </h1>
         {{#with rating}}
            <p> {{title}}: {{value}} </p>
         {{/with}} 
         {{#with actionBlock}}
            <div class=" nav nav-tabs ">
            {{#each tabs}}
               <div class="col-3 align-center">
               {{#if isActive}}
               <a href="#" class="nav-item text-center nav-link active"> {{text}} </a>
               {{else}}
               <a href="#" class="nav-item text-center nav-link"> {{text}} </a>
               {{/if}}
               </div>
            {{/each}}
            </div>
            <hr class="my-3">
            <div class="my-3 px-3">
            {{#with report}}
               <p> {{title}} </p>
               {{#with button}}
               <a href="{{link}}" class="btn btn-secondary"> {{text}} </a>
               {{/with}}
            {{/with}}
            </div>
         {{/with}} {{!--close formBlock.actionBlock--}}
         <hr class="my-3">
         {{#with feedbackBlock}}
         <div class="my-3">
            <h2> {{title}} </h2>
            {{#each buttons}}
            {{#if isWarning}}   
            <a href="{{link}}" class="btn btn-warning me-3 mt-4"> {{text}} </a>
            {{/if}}
            {{#if isSuccess}}   
            <a href="{{link}}" class="btn btn-success me-3 mt-4"> {{text}} </a>
            {{/if}}
            {{#if isDanger}}   
            <a href="{{link}}" class="btn btn-danger me-3 mt-4"> {{text}} </a>
            {{/if}}
            {{/each}}
         </div>
         {{/with}} {{!--close formBlock.feedbackBlock--}}
      </div>
      <div class="col-3">
         {{#with goodsInfo}}
         <div class="card">
            <div class="card-body ms-2 mt-1 py-2">
            <img src="{{photo}}" alt="Laptop ASUS" class="">
            <p class="h3 mt-2 mb-0"> {{name}} </p>
            </div>
         </div>
         <div class="card my-3">
            <div class="card-body ms-2 mt-1 py-2">
               <p class="h3"> {{price}} </p>
               {{#if inMarket}}
               <p class="h4">Є в наявності</p>
               {{/if}}
               {{#each buttons}}
               {{#if isPrimary}}
               <div>
                  <a href="{{link}}" class="btn btn-primary my-1">{{text}}</a>
               </div>
               {{/if}}
               {{#if isSecondary}}
               <div>
                 <a href="{{link}}" class="btn btn-secondary my-1">{{text}}</a>
               </div>  
               {{/if}}
               {{/each}}
            </div>
         </div>
         <div class="card">
            <div class="card-body">
               {{#with seller}}
               <p class="h4"> {{title}}: <b> {{value}} </b> </p>
               {{/with}}
            </div>
         </div>
         {{/with}} {{!--close formBlock.goodsInfo--}}
      </div>
      {{/with}} {{!--close formBlock--}}
   </div>
   <hr class="my-3">
   {{!--end of part 1--}}
   
   <div class="row my-2 mx-0">
      {{> reviewItem}}

   </div>
   <hr class="my-2">
   <div class="row">
      <div class="col-12">
         {{#with service}}
         <div class="card text-bg-success">
            <div class="card-body text-center">
               <h2 class="h2"> {{title}} </h2>
               <p class="paragraph"> {{description}} </p>
               {{#each buttons}}
               <a href="{{link}}" class="btn btn-primary"> {{text}} </a> 
               {{/each}}
            </div>
         </div>
         {{/with}}
      </div>
   </div>



   {{!-- footer nav --}}
   <hr class="my-2">
   <div class="row my-3">
      {{#each footer}}   
         <div class="col-2">
            <div class="nav flex-column">
               <a href="{{0.link}}" class="nav-item nav-link">{{0.text}}</a>
               <a href="{{1.link}}" class="nav-item nav-link">{{1.text}}</a>
               <a href="{{2.link}}" class="nav-item nav-link">{{2.text}}</a>
               <a href="{{3.link}}" class="nav-item nav-link disabled">{{3.text}}</a>
            </div>
         </div>
      {{/each}}
   </div>
   <hr>
</main>