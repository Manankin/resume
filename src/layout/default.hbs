{{! 
  Це леяут по замовчюванню, котрий вже містить базову структуру HTML документа
  І котрий обгортає код container файлів для будь-яких ендпоїнтів
}}

<html>

<head>
      <title>
         {{page.title}}
      </title>
      <meta charset='utf-8' />
      <link href='css/index.css' rel='stylesheet' />
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
			integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body>
   {{#with header}}
      <header class='header-block'>
         <div>
            <h1>{{name.firstname}}
               {{name.lastname}}</h1>
         </div>
         <div>
            <b>{{position}} </b>
         </div>
         <br />
         <div>
            <em>
               {{salary}}
            </em>
         </div>
         <br />
         <address>
            <em>
               {{address}}
            </em>
         </address>

         <br />
         <hr />
      </header>
   {{/with}}
   <section>
      {{> nav}}
   </section>

      {{!  ↓  ця кострукція показує куди шаблонізатору треба вставляти код з container файлу   }}
   {{{body}}}

   {{> footer social=footer.social adres=header.address firstname=header.name.firstname lastname=header.name.lastname}}

   {{!-- Це старий варіант для footer
   {{#with footer}}
      <footer class='footer-block'>
      <div>
         <hr />
         <br />
         {{#with social}}
            {{> footerlink text=email.text href=email.href }}
            {{> footerlink text=phone.text href=phone.href }}
            {{> footerlink text=linkedin.text href=linkedin.href blank=true noLine='false' }}   
         {{/with}}
      </div>
      <div>
         Copyright by {{../header.name.firstname}} {{../header.name.lastname}}
      </div>
      <br/>
      <div>
         {{../header.address}}
      </div>
      </footer>
   {{/with}} --}}
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>